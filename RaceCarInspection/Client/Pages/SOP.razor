@page "/sop/{sopId:int}"
@using RaceCarInspection.Shared.Models;
@using RaceCarInspection.Client.Services;
@inject IInspectionService inspectionService

<h3>@sop.FileName</h3>
@if (sop.FileType == "wav")
{
    <audio controls>
        <source src="@sop.FullPath" type="audio/wav">
    </audio>
}
@if (sop.FileType == "mp4")
{
        <div class="row">
        <div class="col-sm-12 col-lg-8">
            <video  style="width:100%; height:100%;" controls>
        <source src="@sop.FullPath" type="video/mp4">
    </video>
        </div>
    </div>
}
@if (sop.FileType == "jpg")
{
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <img src="@sop.FullPath" style="width:100%; height:100%;" />
        </div>
    </div>
}
@if (sop.FileType == "pdf")
{
    <a href="@sop.FullPath" target="_blank">Open in new tab</a>
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <embed src="@sop.FullPath" style="width:100%; height:1000px;" />
        </div>
    </div>
}

@code {
    [Parameter]
    public int sopId { get; set; }

    private StandardOperatingProcedure sop;

    protected override async Task OnInitializedAsync()
    {
        sop = (await inspectionService.GetStandardOperatingProcedures())?.FirstOrDefault(s => s.Id == sopId);
    }
}
